<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:gravity="center"
    android:orientation="vertical">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/dup_scan"
        app:lottie_repeatMode="reverse" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Duplicate photos will required to scan all your gallery photos. It will take some time."
        android:textColor="@color/black_new"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Click to scan button for continuing action."
        android:textColor="@color/black_new"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/scan"
        style="@style/styleButtonBlue"
        android:layout_width="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:elevation="6dp"
        android:includeFontPadding="false"
        android:paddingLeft="@dimen/margin_40"
        android:paddingRight="@dimen/margin_40"
        android:text="@string/action_scan"
        android:textSize="16dp" />


    <RelativeLayout
        android:id="@+id/rel_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="@dimen/margin_25"
        android:background="@drawable/icon_back_ads"
        android:gravity="center"
        android:minHeight="@dimen/ads_size"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="Ads"
            android:textColor="#E0E0E0"
            android:textSize="16sp" />

    </RelativeLayout>


</LinearLayout>
