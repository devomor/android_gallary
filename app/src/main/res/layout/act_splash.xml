<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-100dp"
            android:layout_marginTop="-250dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_row_1" />

        <LinearLayout
            android:id="@+id/linRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-200dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_row_2" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="@dimen/margin_5"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/margin_120"
                    android:layout_height="@dimen/margin_120"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="@dimen/margin_5"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@color/whiteOnly"
                    android:textSize="@dimen/textsize_24" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-200dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_row_3" />

        <ImageView
            android:id="@+id/ivRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-150dp"
            android:layout_marginEnd="-80dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_row_4" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome\nto Gallery"
            android:textColor="@color/whiteOnly"
            android:textSize="34.0sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep secure your photos, Hide Photos, Move to your favorite, Edit Photos, Find Duplicate"
            android:textColor="@color/whiteOnly"
            android:textSize="15.0sp" />

        <ProgressBar
            android:id="@+id/progress_splash"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/whiteOnly"
            android:indeterminateTint="@color/whiteOnly"
            android:progressBackgroundTint="@color/white" />
    </LinearLayout>
</RelativeLayout>