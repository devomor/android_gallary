<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DialogMainLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip">

            <TextView
                android:id="@+id/rename_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:padding="6.0sp"
                android:text="@string/rename_photo_action"
                android:textColor="@color/black"
                android:textSize="18.0sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/medium_spacing"
            android:paddingTop="@dimen/medium_spacing"
            android:paddingRight="@dimen/medium_spacing"
            android:paddingBottom="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_20"
            android:gravity="center">

            <TextView
                android:id="@+id/text_ok"
                style="@style/DialogButton"
                android:paddingStart="@dimen/margin_50"
                android:paddingEnd="@dimen/margin_50"
                android:text="@string/ok" />

            <TextView
                android:id="@+id/text_cancel"
                style="@style/DialogButton"
                android:text="@string/cancel" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>