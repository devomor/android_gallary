<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="75dp">

    <RelativeLayout
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:padding="@dimen/margin_5">

        <ProgressBar
            android:layout_width="@dimen/margin_25"
            android:layout_height="@dimen/margin_25"
            android:layout_centerInParent="true"
            android:progressDrawable="@drawable/icon_progress_drawable" />

        <ImageView
            android:id="@+id/img_filter"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorBlack"
            android:scaleType="fitXY"
            android:src="@drawable/icon_launcher_background" />

        <TextView
            android:id="@+id/tv_filter"
            style="@style/optionText"
            android:layout_width="75dp"
            android:layout_alignBottom="@+id/img_filter"
            android:layout_centerHorizontal="true"
            android:background="@color/colorBlack_60"
            android:text="Text"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/selectedBorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/icon_filter_blue_border" />

    </RelativeLayout>

