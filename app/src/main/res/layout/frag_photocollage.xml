<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">

    <FrameLayout
        android:id="@+id/photoLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomMenuLayout"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/guideView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomMenuLayout"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/icon_touch_one_finger"
        android:drawablePadding="15dp"
        android:gravity="center"
        android:text="@string/create_frame_guide"
        android:textColor="#CA688B"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/bottomMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#B83565"
        android:visibility="gone">

        <ImageView
            android:id="@+id/deleteView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name_new"
            android:src="@drawable/icon_exit_pink_white" />

        <ImageView
            android:id="@+id/borderView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name_new"
            android:src="@drawable/icon_border_white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/infoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name_new"
            android:src="@drawable/icon_info_white" />
    </RelativeLayout>

</RelativeLayout>