<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/app_bg_color">

    <GridView
        android:id="@+id/gridViewFromMediaImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:choiceMode="multipleChoice"
        android:drawSelectorOnTop="false"
        android:gravity="center"
        android:horizontalSpacing="2dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:padding="@dimen/margin_5"
        android:verticalSpacing="2dp" />

    <LinearLayout
        android:id="@+id/file_not_found_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_add_videos" />

        <TextView
            style="@style/myTextView"
            android:gravity="center"
            android:text="@string/add_file_in_private_vault"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_18" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/margin_24"
        android:layout_marginBottom="@dimen/margin_24"
        app:backgroundTint="@color/app_button"
        android:backgroundTint="@color/app_button"
        android:src="@drawable/icon_add" />

</RelativeLayout>