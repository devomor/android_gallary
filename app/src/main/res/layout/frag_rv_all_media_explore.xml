<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:fillViewport="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            android:padding="@dimen/margin_16">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/margin_3"
                    android:text="Videos"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_14"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linVideo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/apk_explore_bg"
                            android:foreground="@drawable/apk_ripple_16"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_5">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardVideo1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_5"
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:layout_marginEnd="@dimen/margin_3"
                                    android:layout_marginBottom="@dimen/margin_3"
                                    app:cardBackgroundColor="@color/color_placeholder"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="@dimen/margin_2">

                                    <ImageView
                                        android:id="@+id/ivVideo1"
                                        android:layout_width="@dimen/margin_38"
                                        android:layout_height="@dimen/margin_38"
                                        android:scaleType="centerCrop" />


                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardVideo2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_3"
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:layout_marginEnd="@dimen/margin_5"
                                    android:layout_marginBottom="@dimen/margin_3"
                                    app:cardBackgroundColor="@color/color_placeholder"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="@dimen/margin_2">

                                    <ImageView
                                        android:id="@+id/ivVideo2"
                                        android:layout_width="@dimen/margin_38"
                                        android:layout_height="@dimen/margin_38"
                                        android:scaleType="centerCrop" />


                                </androidx.cardview.widget.CardView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardVideo3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_5"
                                    android:layout_marginTop="@dimen/margin_3"
                                    android:layout_marginEnd="@dimen/margin_3"
                                    android:layout_marginBottom="@dimen/margin_5"
                                    app:cardBackgroundColor="@color/color_placeholder"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="@dimen/margin_2">

                                    <ImageView
                                        android:id="@+id/ivVideo3"
                                        android:layout_width="@dimen/margin_38"
                                        android:layout_height="@dimen/margin_38"
                                        android:scaleType="centerCrop" />


                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardVideo4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_3"
                                    android:layout_marginTop="@dimen/margin_3"
                                    android:layout_marginEnd="@dimen/margin_5"
                                    android:layout_marginBottom="@dimen/margin_5"
                                    app:cardBackgroundColor="@color/color_placeholder"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="@dimen/margin_2">

                                    <ImageView
                                        android:id="@+id/ivVideo4"
                                        android:layout_width="@dimen/margin_38"
                                        android:layout_height="@dimen/margin_38"
                                        android:scaleType="centerCrop" />


                                </androidx.cardview.widget.CardView>


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_3"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_3"
                                android:includeFontPadding="false"
                                android:text="Videos"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/textsize_12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:text="@string/app_name_new"
                                android:textColor="#C1C1C1"
                                android:textSize="@dimen/textsize_9"
                                android:visibility="gone" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_12"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linPlaces"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/apk_explore_bg"
                            android:foreground="@drawable/apk_ripple_16"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_5">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardPlaces1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_5"
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:layout_marginEnd="@dimen/margin_3"
                                    android:layout_marginBottom="@dimen/margin_3"
                                    app:cardBackgroundColor="@color/color_placeholder"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="@dimen/margin_2">

                                    <ImageView
                                        android:id="@+id/ivPlaces1"
                                        android:layout_width="@dimen/margin_38"
                                        android:layout_height="@dimen/margin_38"
                                        android:scaleType="centerCrop" />


                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardPlaces2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_3"
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:layout_marginEnd="@dimen/margin_5"
                                    android:layout_marginBottom="@dimen/margin_3"
                                    app:cardBackgroundColor="@color/color_placeholder"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="@dimen/margin_2">

                                    <ImageView
                                        android:id="@+id/ivPlaces2"
                                        android:layout_width="@dimen/margin_38"
                                        android:layout_height="@dimen/margin_38"
                                        android:scaleType="centerCrop" />


                                </androidx.cardview.widget.CardView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardPlaces3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_5"
                                    android:layout_marginTop="@dimen/margin_3"
                                    android:layout_marginEnd="@dimen/margin_3"
                                    android:layout_marginBottom="@dimen/margin_5"
                                    app:cardBackgroundColor="@color/color_placeholder"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="@dimen/margin_2">

                                    <ImageView
                                        android:id="@+id/ivPlaces3"
                                        android:layout_width="@dimen/margin_38"
                                        android:layout_height="@dimen/margin_38"
                                        android:scaleType="centerCrop" />


                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardPlaces4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_3"
                                    android:layout_marginTop="@dimen/margin_3"
                                    android:layout_marginEnd="@dimen/margin_5"
                                    android:layout_marginBottom="@dimen/margin_5"
                                    app:cardBackgroundColor="@color/color_placeholder"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="@dimen/margin_2">

                                    <ImageView
                                        android:id="@+id/ivPlaces4"
                                        android:layout_width="@dimen/margin_38"
                                        android:layout_height="@dimen/margin_38"
                                        android:scaleType="centerCrop" />


                                </androidx.cardview.widget.CardView>


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_3"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_3"
                                android:includeFontPadding="false"
                                android:text="Places"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/textsize_12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:text="@string/app_name_new"
                                android:textColor="#C1C1C1"
                                android:textSize="@dimen/textsize_9"
                                android:visibility="gone" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin_3"
                android:text="More"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_14"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linCreateCollage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/apk_item_border"
                android:foreground="@drawable/apk_ripple_16"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/thumbCollage"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/apk_explore_icon_left"
                        android:padding="14dp"
                        android:src="@drawable/e_collage"
                        app:tint="@color/max_grey" />

                    <LinearLayout
                        android:id="@+id/linDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="5dp"
                        android:layout_toEndOf="@+id/thumbCollage"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/make_collage_photo"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="A composite photos by joining a number of other photos"
                            android:textColor="@color/accent_grey"
                            android:textSize="10sp" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linSecureVault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/apk_item_border"
                android:foreground="@drawable/apk_ripple_16"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/thumbVault"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/apk_explore_icon_right"
                        android:padding="14dp"
                        android:src="@drawable/e_vault"
                        app:tint="@color/max_grey" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="5dp"
                        android:layout_toStartOf="@+id/thumbVault"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Secure Vault"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Where all of your safely stored photos and videos"
                            android:textColor="@color/accent_grey"
                            android:textSize="10sp" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linDuplicatePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/apk_item_border"
                android:foreground="@drawable/apk_ripple_16"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/thumbDuplicatePhoto"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/apk_explore_icon_left"
                        android:padding="14dp"
                        android:src="@drawable/e_duplicate_files"
                        app:tint="@color/max_grey" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="5dp"
                        android:layout_toEndOf="@+id/thumbDuplicatePhoto"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duplicate Photos"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="It's photos have no differences as they are the same"
                            android:textColor="@color/accent_grey"
                            android:textSize="10sp" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/apk_item_border"
                android:foreground="@drawable/apk_ripple_16"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/thumbSetting"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/apk_explore_icon_right"
                        android:padding="14dp"
                        android:src="@drawable/e_settings"
                        app:tint="@color/max_grey" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="5dp"
                        android:layout_toStartOf="@+id/thumbSetting"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/settings"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="It's allow to change the functionality"
                            android:textColor="@color/accent_grey"
                            android:textSize="10sp" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>


            <!--            <RelativeLayout-->
            <!--                android:id="@+id/rel_ads"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="@dimen/margin_25"-->
            <!--                android:layout_marginBottom="@dimen/margin_10"-->
            <!--                android:background="@drawable/icon_back_ads"-->
            <!--                android:gravity="center"-->
            <!--                android:minHeight="@dimen/ads_size"-->
            <!--                android:orientation="horizontal">-->

            <!--                <TextView-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:fontFamily="@font/poppins_medium"-->
            <!--                    android:includeFontPadding="false"-->
            <!--                    android:text="Ads"-->
            <!--                    android:textColor="@color/md_grey_300"-->
            <!--                    android:textSize="@dimen/textsize_16" />-->

            <!--            </RelativeLayout>-->


            <LinearLayout
                android:id="@+id/linLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/margin_25"
                    android:layout_height="@dimen/margin_25"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/icon_location"
                    app:tint="@color/red" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="Location"
                    android:textAllCaps="true"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/textsize_16" />

                <LinearLayout
                    android:id="@+id/linProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="("
                        android:textAllCaps="true"
                        android:textColor="@color/md_black_1000"
                        android:textSize="@dimen/textsize_9" />

                    <TextView
                        android:id="@+id/tvTotalScanned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="0"
                        android:textAllCaps="true"
                        android:textColor="@color/md_black_1000"
                        android:textSize="@dimen/textsize_9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text=" / "
                        android:textAllCaps="true"
                        android:textColor="@color/md_black_1000"
                        android:textSize="@dimen/textsize_9" />

                    <TextView
                        android:id="@+id/tvTotalPhotos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="0"
                        android:textAllCaps="true"
                        android:textColor="@color/md_black_1000"
                        android:textSize="@dimen/textsize_9" />

                    <TextView
                        android:id="@+id/tvProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text=")"
                        android:textAllCaps="true"
                        android:textColor="@color/md_black_1000"
                        android:textSize="@dimen/textsize_9" />

                    <ProgressBar
                        android:layout_width="@dimen/margin_12"
                        android:layout_height="@dimen/margin_12"
                        android:layout_marginStart="@dimen/margin_8"
                        android:indeterminateTint="@color/black" />

                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerLocationWise"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginBottom="@dimen/margin_16"
                android:visibility="visible" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>