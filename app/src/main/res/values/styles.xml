<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppMainTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:popupMenuStyle">@style/customThemeApp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/tab_selected_new</item>
        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor" tools:targetApi="lollipop">false</item>
        <item name="android:windowBackground">@color/white_new</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:statusBarColor" tools:targetApi="m">@color/app_bg_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="customThemeApp" parent="ThemeOverlay.AppCompat">
        <item name="android:colorBackground">@color/toolbar_popup_back</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textSize">@dimen/textsize_14</item>
        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor">false</item>
        <!-- Required for Lollipop. -->
        <item name="android:overlapAnchor">false</item>
    </style>

    <style name="Theme.Swipe.Back.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">@color/accent_cyan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Animations" />
    <!-- PopUpMenu -->
    <style name="Animations.PopUpMenu" />

    <style name="Animations.PopUpMenu.Left">
        <item name="android:windowEnterAnimation">@anim/anim_grow_from_bottomleft_to_topright</item>
        <item name="android:windowExitAnimation">@anim/anim_shrink_from_topright_to_bottomleft
        </item>
    </style>

    <style name="Animations.PopUpMenu.Right">
        <item name="android:windowEnterAnimation">@anim/anim_grow_from_bottomright_to_topleft</item>
        <item name="android:windowExitAnimation">@anim/anim_shrink_from_topleft_to_bottomright
        </item>
    </style>

    <style name="Animations.PopUpMenu.Center">
        <item name="android:windowEnterAnimation">@anim/anim_grow_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_shrink_from_top</item>
    </style>

    <style name="Animations.PopDownMenu.Reflect">
        <item name="android:windowEnterAnimation">@anim/anim_pump_top</item>
        <item name="android:windowExitAnimation">@anim/anim_disappear</item>
    </style>

    <style name="Animations.PopUpMenu.Reflect">
        <item name="android:windowEnterAnimation">@anim/anim_pump_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_disappear</item>
    </style>


    <!-- PopDownMenu -->
    <style name="Animations.PopDownMenu" />

    <style name="Animations.PopDownMenu.Left">
        <item name="android:windowEnterAnimation">@anim/anim_grow_from_topleft_to_bottomright</item>
        <item name="android:windowExitAnimation">@anim/anim_shrink_from_bottomright_to_topleft
        </item>
    </style>

    <style name="Animations.PopDownMenu.Right">
        <item name="android:windowEnterAnimation">@anim/anim_grow_from_topright_to_bottomleft</item>
        <item name="android:windowExitAnimation">@anim/anim_shrink_from_bottomleft_to_topright
        </item>
    </style>

    <style name="Animations.PopDownMenu.Center">
        <item name="android:windowEnterAnimation">@anim/anim_grow_from_top</item>
        <item name="android:windowExitAnimation">@anim/anim_shrink_from_bottom</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#C6C5C5</item>
        <item name="colorControlActivated">#4CAF50</item>
    </style>

    <style name="AdAttributionView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">Ad</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#FFCC66</item>
    </style>

    <style name="AlertDialogCustomRation" parent="Theme.AppCompat.Dialog">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColor">@color/black_new</item>
        <item name="android:textColorPrimary">@color/black_new</item>
        <item name="textColorAlertDialogListItem">@color/black_new</item>
        <!-- Used for the background -->
        <item name="colorControlActivated">#0385BF</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="android:background">@color/white_new</item>
    </style>

    <color name="color_light_grey">#c9c9c9</color>

    <style name="NavigationStyle" parent="Widget.Design.NavigationView">
        <item name="android:textColorPrimary">@color/accent_black</item>
        <item name="android:textColorSecondary">@color/accent_black</item>
        <item name="android:background">@color/app_bg_color</item>
        <!-- text size in menu-->
        <item name="android:textSize">14sp</item>
        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">50dp</item>
        <item name="listPreferredItemHeightSmall">50dp</item>
        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">16dp</item>
        <item name="listPreferredItemPaddingLeft">16dp</item>
        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">20dp</item>
        <item name="listPreferredItemPaddingRight">20dp</item>
    </style>

    <style name="optionRecyclerView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
        <item name="android:scrollbars">none</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="mainOptionLinear">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/margin_12</item>
        <item name="android:paddingLeft">@dimen/margin_5</item>
        <item name="android:paddingRight">@dimen/margin_5</item>
        <item name="android:paddingTop">@dimen/margin_12</item>
    </style>

    <style name="optionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_new</item>
        <item name="android:textSize">@dimen/textsize_12</item>
    </style>

    <style name="optionIcon">
        <item name="android:tint">@color/colorBlack</item>
        <item name="android:layout_width">@dimen/margin_20</item>
        <item name="android:layout_height">@dimen/margin_20</item>
        <item name="android:layout_marginBottom">@dimen/margin_10</item>
        <item name="android:src">@drawable/icon_cross</item>
    </style>

    <style name="styleButtonBlue">
        <item name="android:layout_marginLeft">@dimen/margin_32</item>
        <item name="android:layout_marginRight">@dimen/margin_32</item>
        <item name="android:textColor">@color/whiteOnly</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_36</item>
        <item name="android:foreground">@drawable/apk_ripple_16</item>
        <item name="android:textSize">@dimen/textsize_14</item>
        <item name="android:background">@drawable/apk_button</item>
        <item name="android:elevation">@dimen/margin_3</item>
    </style>

    <style name="DialogButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/margin_100</item>
        <item name="android:textColor">@color/whiteOnly</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingStart">@dimen/margin_40</item>
        <item name="android:paddingEnd">@dimen/margin_40</item>
        <item name="android:paddingTop">@dimen/margin_7</item>
        <item name="android:paddingBottom">@dimen/margin_7</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:background">@drawable/apk_button</item>
    </style>

    <style name="DialogMainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_5</item>
        <item name="android:background">@drawable/e_dialog_bg</item>
        <item name="android:elevation">@dimen/margin_5</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="myTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="style_recovery_answer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_50</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:layout_marginTop">@dimen/margin_20</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">@string/answer</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">@dimen/margin_12</item>
        <item name="android:textColor">@color/lockpad_text_color</item>
        <item name="android:textColorHint">@color/color_light_grey</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/textsize_14</item>
    </style>

    <style name="style_recovery_question_spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_50</item>
        <item name="android:paddingLeft">@dimen/margin_12</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">@dimen/margin_40</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="style_recovery_question_spinner_arrow">
        <item name="android:layout_width">@dimen/margin_50</item>
        <item name="android:layout_height">@dimen/margin_50</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:padding">@dimen/margin_10</item>
        <item name="srcCompat">@drawable/icon_arrow_down</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="ThemeRadio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/black</item>
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="styleLockpadForgotPasswordText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_12</item>
        <item name="android:layout_marginLeft">@dimen/margin_40</item>
        <item name="android:layout_marginRight">@dimen/margin_40</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/forgot_passcode</item>
        <item name="android:textColor">@color/lockpad_text_color</item>
        <item name="android:textScaleX">1.12</item>
        <item name="android:textSize">@dimen/textsize_12</item>
    </style>

    <style name="styleLockpadKeypadButton">
        <item name="android:layout_width">@dimen/margin_70</item>
        <item name="android:layout_height">@dimen/margin_70</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/icon_lockpad_button_back_selector</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/lockpad_text_color_selector</item>
        <item name="android:textSize">@dimen/textsize_28</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="styleLockpadKeypadButtonRowLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="styleLockpadKeypadButtonErase">
        <item name="android:layout_width">@dimen/margin_70</item>
        <item name="android:layout_height">@dimen/margin_70</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/icon_lockpad_button_back_selector</item>
        <item name="android:padding">@dimen/margin_22</item>
        <item name="android:src">@drawable/icon_lock_delete_no</item>
        <item name="android:elevation">2dp</item>
        <item name="tint">@color/lockpad_text_color_selector</item>
    </style>

    <style name="styleLockpadKeypadHorizontalLines">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_5</item>
        <item name="android:background">@color/vault_line</item>
    </style>

    <style name="styleLockpadHorizontalLines">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/margin_2</item>
        <item name="android:background">@color/vault_edit_line</item>
    </style>


    <style name="styleLockpadEditLyout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_2</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="styleLockpadText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_30</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_24</item>
    </style>

    <style name="styleLockpadKeypadButtonLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">4</item>
    </style>

    <style name="styleLockpadCodeParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/margin_45</item>
        <item name="android:layout_marginTop">@dimen/margin_20</item>
        <item name="android:layout_marginRight">@dimen/margin_45</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="styleLockPatternView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/margin_30</item>
        <item name="android:layout_marginEnd">@dimen/margin_30</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="lock9_autoLink">false</item>
        <item name="lock9_enableVibrate">true</item>
        <item name="lock9_lineColor">@color/pattern_line_color</item>
        <item name="lock9_lineWidth">@dimen/margin_8</item>
        <!--        <item name="lock9_nodeAreaExpand">@dimen/margin_10</item>-->
        <item name="lock9_nodeOnAnim">@anim/anim_node_on_1</item>
        <item name="lock9_nodeOnSrc">@drawable/icon_pattern_dot_selected</item>
        <item name="lock9_nodeSize">@dimen/pattern_node_size</item>
        <item name="lock9_nodeSrc">@drawable/icon_pattern_dot_default</item>
        <item name="lock9_padding">@dimen/margin_50</item>
        <item name="lock9_spacing">@dimen/margin_50</item>
        <item name="lock9_vibrateTime">20</item>
    </style>

    <style name="checkboxStyleType1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="BoldTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolbarText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/textsize_16</item>

    </style>

    <style name="ViewImageBottomOptionParent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/margin_65</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/margin_5</item>
    </style>

    <style name="ViewImageBottomOptionIcon">
        <item name="android:layout_width">@dimen/margin_20</item>
        <item name="android:layout_height">@dimen/margin_20</item>
        <item name="android:src">@drawable/e_edit_pencil</item>
        <item name="tint">@color/whiteOnly</item>
    </style>

    <style name="ViewImageBottomOptionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/whiteOnly</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SlidingDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
</resources>
